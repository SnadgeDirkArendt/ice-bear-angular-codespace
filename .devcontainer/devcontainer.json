{
	"name": "Node.js & TypeScript",
	"build": {
	  "dockerfile": "Dockerfile",
	  "args": {
		"VARIANT": "16-bullseye"
	  }
	},
	"settings": {},
	"extensions": [
	  "angular.ng-template",
	  "dbaeumer.vscode-eslint",
	  "esbenp.prettier-vscode",
	  "shardulm94.trailing-spaces",
	  "firefox-devtools.vscode-firefox-debug"
	],
	"forwardPorts": [ 4200 ],
	"postCreateCommand": "npm install",
	"remoteUser": "node"
  }

